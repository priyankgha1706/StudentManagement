<head>

    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.2.1/css/all.min.css" />
</head>
<div>
    <div class="text-right">
        <button class="btn btn-success" onclick="Add()"><span><i class="fa-solid fa-plus"></i></span>  ADD</button>

    </div>

    <table class="table">
        <thead>
            <tr>
                <th scope="col">S.No</th>
                <th scope="col">Std_Id</th>
                <th scope="col">Roll_No</th>
                <th scope="col">Tamil</th>
                <th scope="col">English</th>
                <th scope="col">Maths</th>
                <th scope="col">Science</th>
                <th scope="col">Social</th>
                <th scope="col">Total</th>
                <th scope="col">Average</th>
                <th scope="col">Action</th>
                <th scope="col">Action</th>
            </tr>
        </thead>
        <tbody>
            @if (Model != null)
            {
                foreach (var item in Model)
                {
                    <tr>
                        <td>@i</td>
                        <td>
                            @Html.DisplayFor(m => item.StdId)
                        </td>
                        <td>
                            @Html.DisplayFor(m => item.RollNo)
                        </td>
                        <td>
                            @Html.DisplayFor(m => item.Name)
                        </td>
                        <td>
                            @Html.DisplayFor(m => item.OS)
                        </td>
                        <td>
                            @Html.DisplayFor(m => item.DBMS)
                        </td>
                        <td>
                            @Html.DisplayFor(m => item.CS)
                        </td>
                        <td>
                            @Html.DisplayFor(m => item.JAVA)
                        </td>
                        <td>
                            @Html.DisplayFor(m => item.PYTHON)
                        </td>
                        <td>
                            @Html.DisplayFor(m => item.Total)
                        </td>
                        <td>
                            @Html.DisplayFor(m => item.Average)
                        </td>

                        <td>
                            <button onclick="Edit(@(item.StdId))"><span><i class="fa-solid fa-pen-to-square"></i></span></button>
                        <td>
                            <button onclick="Delete(@(item.StdId))"><span><i class="fa-solid fa-trash" aria-hidden="true"></i></span></button>

                        </td>
                    </tr>
                    i++;
                }
            }
            else
            {
                <tr>
                    <td>
                        no data found
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
<script>


    function Edit(id) {
        window.location.href = "/Student/EditDetails?id=" + id;
    }

    function Add() {
        window.location.href = "/Student/SaveStudentRecords";
    }
    function Delete(id) {
        var result = confirm("Are you sure you want to delete?");
        if (result) {
            window.location.href = "/Student/Delete?id=" + id;
        }


    }


</script>