@model IEnumerable<StudentAppCore.Core.Models.StudentMarks>
@{
    ViewBag.Title = "GetStudentList";
}

<h2>GetStudentList</h2>

@{
    ViewBag.Title = "List";
    int i = 1;

}
<style>
    .table {
        width: 100%;
        table-layout: fixed;
        background-color: azure
    }

    th {
        width: 100%;
        table-layout: fixed;
        background-color: white;
    }

